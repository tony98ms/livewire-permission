{
    "name": "tonystore/livewire-permission-manager",
    "description": "Package that provides a graphical interface to manage roles and permissions.",
    "type": "package",
    "homepage": "https://github.com/tony98ms/livewire-permission-manager",
    "keywords": [
        "laravel",
        "livewire",
        "tonystore",
        "permission",
        "permissions",
        "roles"
    ],
    "require": {
        "livewire/livewire": "2.*",
        "spatie/laravel-permission": "^3.0 || ^4.0 || ^5.1",
        "php": "^7.0|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Tonystore\\LivewirePermission\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Anthony Medina Sandoval",
            "email": "thony918@outlook.com",
            "homepage": "https://github.com/tony98ms",
            "role": "Developer"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Tonystore\\LivewirePermission\\LivewirePermissionProvider"
            ],
            "aliases": {
                "LivewirePermission": "Tonystore\\LivewirePermission\\LivewirePermissionFacade"
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
